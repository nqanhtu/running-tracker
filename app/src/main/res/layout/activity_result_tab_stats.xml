        android:layout_marginRight="160dp"
    />

    <!-- Max Speed -->
    <TextView
        style="@style/textMediumValue"
        android:id="@+id/textValueMaxSpeed"
        android:text="00.0"
        android:textSize="25sp"

        app:layout_constraintTop_toTopOf="@+id/textValueAverageSpeed"
        app:layout_constraintBottom_toBottomOf="@+id/textValueAverageSpeed"
        app:layout_constraintLeft_toLeftOf="@+id/textValueDistance"
        app:layout_constraintRight_toRightOf="@+id/textValueDistance"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_width="119dp"
        android:layout_height="32dp"
        android:gravity="left"
    />

    <TextView
        style="@style/textDescription"
        android:id="@+id/textDescriptionMaxSpeed"
        android:text="@string/maxSpeed"

        app:layout_constraintBottom_toTopOf="@+id/textValueMaxSpeed"
        app:layout_constraintLeft_toLeftOf="@+id/textValueMaxSpeed"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
