<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtDateHistoryHide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtDateHistory"
        android:layout_alignParentEnd="true"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtDateHistory"
        style="@style/textMediumValue"

        android:layout_width="223dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imgIconHistory"
        android:layout_alignParentStart="true"
        android:layout_marginStart="79dp"
        android:text="1/1/2018 5:00"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgIconHistory"
        app:layout_constraintLeft_toLeftOf="@+id/imgIconHistory"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgIconHistory" />

    <ImageView
        android:id="@+id/imgIconHistory"
        android:layout_width="62dp"

        android:layout_height="48dp"
        android:layout_marginBottom="45dp"

        app:layout_constraintBottom_toBottomOf="@+id/txtDateHistory"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/txtDateHistory"
        app:srcCompat="@drawable/ic_athletics" />
</RelativeLayout>