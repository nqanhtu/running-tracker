<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <!-- Duration -->
    <TextView
        style="@style/textMediumValue"
        android:id="@+id/textValueDuration"
        android:text="00:00:00"
        android:textSize="25sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textValueAveragePace"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textValueDistance"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="0dp"
        android:layout_width="119dp"
        android:layout_height="32dp"
        android:gravity="left"
    />

    <TextView
        style="@style/textDescription"
        android:id="@+id/textDescriptionDuration"
        android:text="@string/duration"

        app:layout_constraintBottom_toTopOf="@+id/textValueDuration"
        app:layout_constraintLeft_toLeftOf="@+id/textValueDuration"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
    />

    <ImageView
        android:id="@+id/iconDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_stopwatch"

        app:layout_constraintTop_toTopOf="@+id/textValueDuration"
        app:layout_constraintBottom_toBottomOf="@+id/textValueDuration"
        app:layout_constraintRight_toRightOf="@+id/textValueDuration"
        app:layout_constraintLeft_toLeftOf="@+id/textValueDuration"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="160dp"
    />

    <!-- Distance -->
    <TextView
        style="@style/textMediumValue"
        android:id="@+id/textValueDistance"
        android:text="00.0"
        android:textSize="25sp"

        app:layout_constraintTop_toTopOf="@+id/textValueDuration"
        app:layout_constraintBottom_toBottomOf="@+id/textValueDuration"
        app:layout_constraintLeft_toRightOf="@+id/textValueDuration"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="0dp"
        android:layout_width="119dp"
        android:layout_height="32dp"
        android:gravity="left"
    />

    <TextView
        style="@style/textDescription"
        android:id="@+id/textDescriptionDistance"
        android:text="@string/distanceMetric"

        app:layout_constraintBottom_toTopOf="@+id/textValueDistance"
        app:layout_constraintLeft_toLeftOf="@+id/textValueDistance"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
    />

    <ImageView
        android:id="@+id/iconDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/road_variant"

        app:layout_constraintTop_toTopOf="@+id/textValueDistance"
        app:layout_constraintBottom_toBottomOf="@+id/textValueDistance"
        app:layout_constraintRight_toRightOf="@+id/textValueDistance"
        app:layout_constraintLeft_toLeftOf="@+id/textValueDistance"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="160dp"
    />

    <!-- Average Pace -->
    <TextView
        style="@style/textMediumValue"
        android:id="@+id/textValueAveragePace"
        android:text="00.0"
        android:textSize="25sp"

        app:layout_constraintTop_toBottomOf="@+id/textValueDuration"
        app:layout_constraintBottom_toTopOf="@+id/textValueAverageSpeed"
        app:layout_constraintLeft_toLeftOf="@+id/textValueDuration"
        app:layout_constraintRight_toRightOf="@+id/textValueDuration"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_width="119dp"
        android:layout_height="32dp"
        android:gravity="left"
    />

    <TextView
        style="@style/textDescription"
        android:id="@+id/textDescriptionAveragePace"
        android:text="@string/avgPace"

        app:layout_constraintBottom_toTopOf="@+id/textValueAveragePace"
        app:layout_constraintLeft_toLeftOf="@+id/textValueAveragePace"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
    />

    <ImageView
        android:id="@+id/iconAveragePace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/run_fast"

        app:layout_constraintTop_toTopOf="@+id/textValueAveragePace"
        app:layout_constraintBottom_toBottomOf="@+id/textValueAveragePace"
        app:layout_constraintRight_toRightOf="@+id/textValueAveragePace"
        app:layout_constraintLeft_toLeftOf="@+id/textValueAveragePace"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="160dp"
    />

    <!-- Max Pace -->
    <TextView
        style="@style/textMediumValue"
        android:id="@+id/textValueMaxPace"
        android:text="00.0"
        android:textSize="25sp"

        app:layout_constraintTop_toTopOf="@+id/textValueAveragePace"
        app:layout_constraintBottom_toBottomOf="@+id/textValueAveragePace"
        app:layout_constraintLeft_toLeftOf="@+id/textValueDistance"
        app:layout_constraintRight_toRightOf="@+id/textValueDistance"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_width="119dp"
        android:layout_height="32dp"
        android:gravity="left"
    />

    <TextView
        style="@style/textDescription"
        android:id="@+id/textDescriptionMaxPace"
        android:text="@string/maxPace"

        app:layout_constraintBottom_toTopOf="@+id/textValueMaxPace"
        app:layout_constraintLeft_toLeftOf="@+id/textValueMaxPace"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
    />

    <ImageView
        android:id="@+id/iconMaxPace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/run_fast"

        app:layout_constraintTop_toTopOf="@+id/textValueMaxPace"
        app:layout_constraintBottom_toBottomOf="@+id/textValueMaxPace"
        app:layout_constraintRight_toRightOf="@+id/textValueMaxPace"
        app:layout_constraintLeft_toLeftOf="@+id/textValueMaxPace"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="160dp"
    />

    <!-- Average Speed -->
    <TextView
        style="@style/textMediumValue"
        android:id="@+id/textValueAverageSpeed"
        android:text="00.0"
        android:textSize="25sp"

        app:layout_constraintTop_toBottomOf="@+id/textValueAveragePace"
        app:layout_constraintBottom_toTopOf="@+id/textValueNetCalorie"
        app:layout_constraintLeft_toLeftOf="@+id/textValueDuration"
        app:layout_constraintRight_toRightOf="@+id/textValueDuration"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_width="119dp"
        android:layout_height="32dp"
        android:gravity="left"
    />

    <TextView
        style="@style/textDescription"
        android:id="@+id/textDescriptionAverageSpeed"
        android:text="@string/avgSpeed"

        app:layout_constraintBottom_toTopOf="@+id/textValueAverageSpeed"
        app:layout_constraintLeft_toLeftOf="@+id/textValueAverageSpeed"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
    />

    <ImageView
        android:id="@+id/iconAverageSpeed"
        android:layout_width="wrap_content"
