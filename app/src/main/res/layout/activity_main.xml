<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:android.support.v7.appcompat="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical"
                                             tools:context="runningtracker.MainActivity"
                                             android:weightSum="1">
    <android.support.v7.widget.Toolbar
        style="@style/DarkToolbar"
        android:id="@+id/actionbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android.support.v7.appcompat:navigationIcon="@drawable/ic_menu_white_24dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    />

    <ImageButton
        style="@style/ActionCircularImageButton"
        android:id="@+id/buttonStart"
        android.support.v7.appcompat:srcCompat="@drawable/ic_directions_run_white_48dp"
        android:background="@drawable/start_circle_button"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
    />

    <ImageButton
        style="@style/ActionCircularImageButton"
        android:id="@+id/buttonPause"
        android.support.v7.appcompat:srcCompat="@drawable/ic_pause_white_48dp"
        android:background="@drawable/stop_circle_button"
        android:enabled="false"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="@+id/buttonStart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/buttonStart"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
    />

    <ImageButton
        style="@style/ActionCircularImageButton"
        android:id="@+id/buttonStop"
        android.support.v7.appcompat:srcCompat="@drawable/ic_stop_white_48dp"
        android:background="@drawable/stop_circle_button"
        android:enabled="false"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="@+id/buttonStart"
        app:layout_constraintLeft_toLeftOf="@+id/buttonStart"
        app:layout_constraintRight_toRightOf="@+id/buttonStart"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
    />

    <!--Duration-->
    <TextView
        style="@style/textLargeValue"
        android:id="@+id/textDurationValue"
        android:text="00:00:00"

        app:layout_constraintTop_toBottomOf="@+id/actionbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"

        android:visibility="visible"
    />

    <TextView
        style="@style/textDescription"
        android:id="@+id/textDuration"
        android:text="@string/duration"

        app:layout_constraintTop_toTopOf="@+id/textDurationValue"
        app:layout_constraintLeft_toLeftOf="@+id/textDurationValue"
        app:layout_constraintRight_toRightOf="@+id/textDurationValue"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
    />

    <ImageView
        android:id="@+id/imageDuration"
        android.support.v7.appcompat:srcCompat="@drawable/ic_timer_grey600_24dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@+id/textDurationValue"
		app:layout_constraintRight_toRightOf="@+id/textDurationValue"
        android:layout_marginTop="0dp"
        android:layout_marginRight="240dp"
	/>

    <!--Pace-->
    <TextView
        style="@style/textMediumValue"
        android:id="@+id/textPaceValue"
        android:text="00:00"
        android:contentDescription="Average Pace"

        app:layout_constraintTop_toBottomOf="@+id/textDurationValue"
        app:layout_constraintLeft_toLeftOf="@+id/textDurationValue"
        app:layout_constraintRight_toRightOf="@+id/textDurationValue"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
    />

    <TextView
        style="@style/textDescription"
        android:id="@+id/textPace"
        android:text="@string/pace"

        app:layout_constraintTop_toTopOf="@+id/textPaceValue"
        app:layout_constraintLeft_toLeftOf="@+id/textPaceValue"
        app:layout_constraintRight_toRightOf="@+id/textPaceValue"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
    />

    <ImageView
        android:id="@+id/imagePace"
        android.support.v7.appcompat:srcCompat="@drawable/ic_run_fast_grey600_24dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@+id/textPaceValue"
        app:layout_constraintLeft_toLeftOf="@+id/textPaceValue"
        app:layout_constraintRight_toRightOf="@+id/textPaceValue"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
    />

    <!--Distance-->
    <TextView
        style="@style/textMediumValue"
        android:id="@+id/textDistanceValue"
        android:text="0.0"

		app:layout_constraintBottom_toBottomOf="@+id/textPaceValue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textPaceValue"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
    />

    <TextView
        style="@style/textDescription"
        android:id="@+id/textDistance"
        android:text="@string/distanceMetric"

        app:layout_constraintTop_toTopOf="@+id/textDistanceValue"
		app:layout_constraintLeft_toLeftOf="@+id/textDistanceValue"
		app:layout_constraintRight_toRightOf="@+id/textDistanceValue"
		android:layout_marginTop="45dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
	/>

    <ImageView
        android:id="@+id/imageDistance"
        android.support.v7.appcompat:srcCompat="@drawable/ic_road_variant_grey600_24dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@+id/textDistanceValue"
        app:layout_constraintLeft_toLeftOf="@+id/textDistanceValue"
        app:layout_constraintRight_toRightOf="@+id/textDistanceValue"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
    />

    <!--Calorie-->
    <TextView
        style="@style/textMediumValue"
        android:id="@+id/textCalorieValue"
        android:text="0000"

		app:layout_constraintBottom_toBottomOf="@+id/textPaceValue"
        app:layout_constraintLeft_toRightOf="@+id/textPaceValue"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
    />

    <TextView
        style="@style/textDescription"
        android:id="@+id/textCalorie"
        android:text="@string/netCalorie"

        app:layout_constraintTop_toTopOf="@+id/textCalorieValue"
		app:layout_constraintLeft_toLeftOf="@+id/textCalorieValue"
		app:layout_constraintRight_toRightOf="@+id/textCalorieValue"
		android:layout_marginTop="45dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
	/>

    <ImageView
        android:id="@+id/imageCalorie"
        android.support.v7.appcompat:srcCompat="@drawable/ic_fire_grey600_24dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@+id/textCalorieValue"
        app:layout_constraintLeft_toLeftOf="@+id/textCalorieValue"
        app:layout_constraintRight_toRightOf="@+id/textCalorieValue"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
    />
    
</android.support.constraint.ConstraintLayout>
