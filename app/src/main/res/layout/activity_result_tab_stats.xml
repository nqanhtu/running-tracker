        style="@style/textMediumValue"
        android:id="@+id/textValueGrossCalorie"
        android:text="0000"
        android:textSize="25sp"

        app:layout_constraintTop_toTopOf="@+id/textValueNetCalorie"
        app:layout_constraintBottom_toBottomOf="@+id/textValueNetCalorie"
        app:layout_constraintLeft_toLeftOf="@+id/textValueDistance"
        app:layout_constraintRight_toRightOf="@+id/textValueDistance"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_width="119dp"
        android:layout_height="32dp"
        android:gravity="left"
    />

    <TextView
        style="@style/textDescription"
        android:id="@+id/textDescriptionGrossCalorie"
        android:text="@string/grossCalorie"

        app:layout_constraintBottom_toTopOf="@+id/textValueGrossCalorie"
        app:layout_constraintLeft_toLeftOf="@+id/textValueGrossCalorie"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
    />

    <ImageView
        android:id="@+id/iconGrossCalorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fire"

        app:layout_constraintTop_toTopOf="@+id/textValueGrossCalorie"
        app:layout_constraintBottom_toBottomOf="@+id/textValueGrossCalorie"
        app:layout_constraintRight_toRightOf="@+id/textValueGrossCalorie"
        app:layout_constraintLeft_toLeftOf="@+id/textValueGrossCalorie"
        android:layout_marginTop="0dp"
