<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0277BD">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4DB6AC">

        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgTimer"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_marginTop="31dp"
            android:elevation="1dp"
            android:gravity="center"
            android:text="00:00:00"
            android:textColor="#FAFAFA"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/imgTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:tint="#000000"
            app:srcCompat="@drawable/ic_timer_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/imgDuration"
            android:layout_alignStart="@+id/imgDuration" />

        <TextView
            android:id="@+id/txtDuration"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTimer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:gravity="center"
            android:text="0.00"
            android:textColor="#FAFAFA"
            android:textSize="50sp" />

        <ImageView
            android:id="@+id/imgDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/ic_road_variant_black_24dp"
            android:layout_below="@+id/txtTimer"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txtCalorie"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtDuration"
            android:layout_alignRight="@+id/txtDuration"
            android:layout_below="@+id/txtDuration"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="0000"
            android:textColor="#FAFAFA"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/txtAvgPace"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtCalorie"
            android:layout_alignBottom="@+id/txtCalorie"
            android:layout_alignLeft="@+id/txtDuration"
            android:layout_alignStart="@+id/txtDuration"
            android:gravity="center"
            android:text="00:00"
            android:textColor="#FAFAFA"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/imgAvgPace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_run_fast_black_24dp"
            android:layout_above="@+id/txtAvgPace"
            android:layout_alignLeft="@+id/txtTimer"
            android:layout_alignStart="@+id/txtTimer" />

        <ImageView
            android:id="@+id/imgCalorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_fire_black_24dp"
            android:layout_above="@+id/txtAvgPace"
            android:layout_alignRight="@+id/txtTimer"
            android:layout_alignEnd="@+id/txtTimer" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_alignLeft="@+id/imgAvgPace"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imgAvgPace"
            android:layout_marginBottom="46dp"
            app:srcCompat="@drawable/run_fast" />

    </RelativeLayout>
</LinearLayout>
